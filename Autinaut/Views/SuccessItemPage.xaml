<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             x:Class="Autinaut.Views.SuccessItemPage"
             Title="Mein Erfolg">

    <StackLayout Margin="20"
                 VerticalOptions="StartAndExpand">
        <Frame BackgroundColor="GhostWhite"
               Margin="20,0,20,0"
               Padding="10">
            <Editor Text="{Binding SuccessNote}"
                    TextColor="Black"
                    AutoSize="TextChanges"
                    Margin="10,0,20,30"
                    Placeholder="Beschreibe den Erfolg"
                    PlaceholderColor="Olive"
                    BackgroundColor="GhostWhite" />
        </Frame>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     Orientation="Horizontal"
                     Margin="20,20,20,0">
            <buttons:SfButton x:Name="SfButtonSave"
                              Text="Speichern"
                              WidthRequest="100"
                              CornerRadius="20"
                              IsCheckable="True"
                              Clicked="OnSaveClicked"/>
            <buttons:SfButton x:Name="SfButtonDelete"
                              Text="Löschen"
                              WidthRequest="100"
                              CornerRadius="20"
                              IsCheckable="True"
                              Clicked="OnDeleteClicked"/>
            <buttons:SfButton x:Name="SfButtonCancel"
                              Text="Abbrechen"
                              WidthRequest="100"
                              CornerRadius="20"
                              IsCheckable="True"
                              Clicked="OnCancelClicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>