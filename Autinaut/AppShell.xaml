<Shell
    x:Class="Autinaut.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:autinaut="clr-namespace:Autinaut"
    xmlns:views="clr-namespace:Autinaut.Views"
    Title="Autinaut"
    x:DataType="autinaut:AppShell">

    <Tab
        Title="Gefühle"
        AutomationProperties.Name="Gefühle"
        Icon="emotion.png">
        <ShellContent ContentTemplate="{DataTemplate views:EmotionItemsPage}" Style="{StaticResource EmotionShell}" />
    </Tab>
    <Tab
        Title="Erfolge"
        AutomationProperties.Name="Erfolge"
        Icon="star.png">
        <ShellContent ContentTemplate="{DataTemplate views:SuccessItemsPage}" Style="{StaticResource SuccessShell}" />
    </Tab>
    <Tab
        Title="Info"
        AutomationProperties.Name="Information"
        Icon="info.png">
        <ShellContent ContentTemplate="{DataTemplate views:InfoPage}" Style="{StaticResource InfoShell}" />
    </Tab>
</Shell>