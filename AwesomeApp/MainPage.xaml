<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AwesomeApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Orange"
               Padding="24"
               Margin="20,50,20,20"
               CornerRadius="10">
            <Label Text="Your Feelings Matter"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   FontSize="36"/>
        </Frame>
        <Label Text="Have an daily overview how your mood is changing."
               FontSize="Title"
               Padding="30,10,30,10"
               Margin="0,0,0,50"/>
        <StackLayout>
            <Button Text="Add Mood" FontSize="Medium" BorderWidth="2" BorderColor="Orange" Margin="10" CornerRadius="10" WidthRequest="200" HorizontalOptions="Center"></Button>
            <Button Text="Show Moods" FontSize="Medium" BorderWidth="2" BorderColor="Orange" Margin="10" CornerRadius="10"  WidthRequest="200" HorizontalOptions="Center"></Button>
            <Button Text="Daily Chart" FontSize="Medium" BorderWidth="2" BorderColor="Orange" Margin="10" CornerRadius="10"  WidthRequest="200" HorizontalOptions="Center"></Button>
        </StackLayout>
        
    </StackLayout>

</ContentPage>
